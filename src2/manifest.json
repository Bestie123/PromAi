{
  "manifest_version": 3,
  "name": "PromAi Inspector Pro v3.2",
  "version": "3.2.0",
  "description": "Make ANY website PromAi-ready with one click. Auto-generates data-component-id and data-module-id for all elements.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "function-tracer.js", "inspector.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
